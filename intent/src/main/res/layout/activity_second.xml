        android:id="@+id/textView_result"
        android:layout_weight="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/v_send_result"
        android:id="@+id/button_second" />
</LinearLayout>
